<%= render "utilities/errors", obj: @category %>
<%= form_with(model: @category, class: "shadow mb-3 p-3 bg-success rounded", local: true, data: { turbo: false }) do |f| %>
  <div class="row mb-4">
    <%= f.label :name, "Category name", class: "col-sm-2 col-form-label text-light" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
    </div>
  </div>

  <div class="form-group row mb-4 d-grid gap-2 col-2 mx-auto">
    <%= f.submit class: "btn btn-outline-dark btn-lg" %> 
  </div>
<% end %>