<h1 class = "text-center mt-4"> Category: <%= @category.name %></h1>

<% if logged_in? && current_user.admin? %>
  <div class="text-center mt-4">
    <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-info" %>
  </div>
<% end %>

<h3 class = "text-center mt-4">
  <%= @category.name %>'s Articles
</h3>

<div class = "d-flex justify-content-center mt-4 fs-5"> 
  <%= will_paginate @articles %>
</div>

<%= 
  a = 5
  if a == 5
    render 'articles/articles' 
  end    
%>

<div class = "d-flex justify-content-center mt-1 mb-3 fs-5"> 
  <%= will_paginate @articles %>
</div>