<h1 class = "text-center mt-4"><%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 150%>

<div class="text-center mt-4">
  <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-info" %>
</div>

<h3 class = "text-center mt-4">Your articles</h3>

<div class = "d-flex justify-content-center mt-4 fs-5"> 
  <%= will_paginate @articles %>
</div>

<%= 
  a = 5
  if a == 5
    render 'articles/articles' 
  end    
%>

<div class = "d-flex justify-content-center mt-1 mb-3 fs-5"> 
  <%= will_paginate @articles %>
</div>
