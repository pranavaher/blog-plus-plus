<div class="container">
  <% if @article.errors.any? %>
    <h2>Article has not been saved. The following errors occured.</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class = "row justify-content-center"> 
    <div class="col-10">
      <%= form_with(model: @article, class: "shadow mb-3 p-3 bg-success rounded", local: true, data: { turbo: false }) do |f| %>
        <div class="row mb-4">
          <%= f.label :title, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Article" %>
          </div>
        </div>
        
        <div class="row mb-4">
          <%= f.label :description, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of Article" %>
          </div>
        </div>

        <div class="form-group row mb-4 d-grid gap-2 col-6 mx-auto">
          <%= f.submit class: "btn btn-outline-dark btn-lg" %> 
        </div>
      <% end %>
    </div>
    <%= link_to "[ Cancel & Back to Articles ]", articles_path, class: " text-decoration-none text-success" %>
  </div>
</div>